[user]
	name = Shiva Poudel
	email = dev.shivapoudel@gmail.com
[push]
	default = matching
[diff]
	ignoreSubmodules = dirty
[core]
	longpaths = true
	autocrlf = false
	pager = less -x1,5
	editor = code --wait
	excludesfile = ~/.gitignore_global
[fetch]
	prune = true
[color]
	# ui = true is a superset of all the more specific color options
	# as documented at http://book.git-scm.com/5_customizing_git.html
	# When set to always, always use colors in all git commands which are capable of colored output.
	# When false, never. When set to true or auto, use colors only when the output is to the terminal.
	# When more specific variables of color.* are set, they always take precedence over this setting.
	# Defaults to false.
	ui = auto
	# diff = auto
	# status = auto
	# branch = auto
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[color "branch"]
	local = yellow
	remote = green
	current = cyan
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
	# Remove untracked files.
	untrack = !git clean -f -d
	# Find the closest tagname and generate list of all commits as changelog.
	generate-changelog = "!f(){\
		git log $(git describe --abbrev=0 --tags)..HEAD --no-merges --pretty=format:'* %s';\
	}; f"
	# Delete all local branches but master and the current one, only if they are fully merged with master.
	delete-all-branches = "!f(){\
		git branch | grep -v "master" | grep -v ^* | xargs git branch -d;\
	}; f"
	# Delete all local branches but master and the current one.
	delete-all-branches-force = "!f(){\
		git branch | grep -v "master" | grep -v ^* | xargs git branch -D;\
	}; f"
[winUpdater]
	recentlySeenVersion = 2.24.1.windows.2
